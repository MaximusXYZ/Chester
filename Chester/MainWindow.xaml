<Window x:Class="Chester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
        xmlns:local="clr-namespace:Chester"
        mc:Ignorable="d"
        Title="Chester - MainWindow"
        Height="320"
        Width="600"
        MinHeight="320"
        MinWidth="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="Transparent"
        AllowsTransparency="True"
        Topmost="True"
        WindowStyle="None"
        Opacity="1"
        Loaded="Window_Loaded"
        Closing="Window_Closing">
    <WindowChrome.WindowChrome>
        <WindowChrome
            ResizeBorderThickness="0,0,15,15"
            CaptionHeight="0"/>
    </WindowChrome.WindowChrome>
    <Border
        Padding="5">
        <Grid>
            <Border
                x:Name="Background"
                Background="#181818"
                BorderBrush="Transparent"
                BorderThickness="0"
                CornerRadius="5"
                Margin="0">
                <Grid>
                    <Border
                        x:Name="Top"
                        Background="#161616"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        CornerRadius="5,5,0,0"
                        VerticalAlignment="Top"
                        Height="30"
                        Width="Auto"
                        MouseDown="Top_MouseDown">
                        <Grid>
                            <Button
                                x:Name="ExitBtn"
                                Height="10"
                                Width="10"
                                Background="#FF605C"
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                Style="{StaticResource MacButton}"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Margin="8,0,0,0"
                                Click="ExitBtn_Click"/>
                            <Button
                                x:Name="MinimizeBtn"
                                Height="10"
                                Width="10"
                                Background="#FFBD44"
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                Style="{StaticResource MacButton}"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Margin="24,0,0,0"
                                Click="MinimizeBtn_Click"/>
                            <Button
                                x:Name="MaximizeBtn"
                                Height="10"
                                Width="10"
                                Background="#00CA4E"
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                Style="{StaticResource MacButton}"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Margin="42,0,0,0"
                                Click="MaximizeBtn_Click"/>
                        </Grid>
                    </Border>
                    <Grid
                        Margin="0,30,0,0">
                        <Button
                            x:Name="ExecuteBtn"
                            Height="30"
                            Width="30"
                            Background="#161616"
                            BorderBrush="#181818"
                            BorderThickness="0"
                            FontSize="13"
                            FontFamily="Segoe MDL2 Assets"
                            Content="&#xE768;"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Margin="5"
                            Style="{StaticResource Button}"
                            Click="ExecuteBtn_Click"/>
                        <Button
                            x:Name="ClearBtn"
                            Height="30"
                            Width="30"
                            Background="#161616"
                            BorderBrush="#181818"
                            BorderThickness="0"
                            FontSize="13"
                            FontFamily="Segoe MDL2 Assets"
                            Content="&#xE75C;"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Margin="5,40,5,5"
                            Style="{StaticResource Button}"
                            Click="ClearBtn_Click"/>
                        <Button
                            x:Name="OpenBtn"
                            Height="30"
                            Width="30"
                            Background="#161616"
                            BorderBrush="#181818"
                            BorderThickness="0"
                            FontSize="13"
                            FontFamily="Segoe MDL2 Assets"
                            Content="&#xED25;"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Margin="5,75,5,5"
                            Style="{StaticResource Button}"
                            Click="OpenBtn_Click"/>
                        <Button
                            x:Name="SaveBtn"
                            Height="30"
                            Width="30"
                            Background="#161616"
                            BorderBrush="#181818"
                            BorderThickness="0"
                            FontSize="13"
                            FontFamily="Segoe MDL2 Assets"
                            Content="&#xE896;"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Margin="5,110,5,5"
                            Style="{StaticResource Button}"
                            Click="SaveBtn_Click"/>
                        <Button
                            x:Name="AttachBtn"
                            Height="30"
                            Width="30"
                            Background="#161616"
                            BorderBrush="#181818"
                            BorderThickness="0"
                            FontSize="13"
                            FontFamily="Segoe MDL2 Assets"
                            Content="&#xE8FB;"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            Margin="5,5,5,5"
                            Style="{StaticResource Button}"
                            Click="AttachBtn_Click"/>
                        <Button
                            x:Name="SettingsBtn"
                            Height="30"
                            Width="30"
                            Background="#161616"
                            BorderBrush="#181818"
                            BorderThickness="0"
                            FontSize="13"
                            FontFamily="Segoe MDL2 Assets"
                            Content="&#xE713;"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            Margin="5,5,5,40"
                            Style="{StaticResource Button}"
                            Click="SettingsBtn_Click"/>
                        <avalonedit:TextEditor
                            x:Name="LuaEditor"
                            FontFamily="Consolas"
                            Foreground="White"
                            Background="#161616"
                            SyntaxHighlighting="Lua"
                            ShowLineNumbers="True"
                            BorderBrush="#181818"
                            BorderThickness="0"
                            Margin="40,5,130,5"
                            HorizontalScrollBarVisibility="Disabled"
                            VerticalScrollBarVisibility="Disabled">
                            <avalonedit:TextEditor.Style>
                                <Style>
                                    <Style.Resources>
                                        <Style
                                            TargetType="{x:Type Border}">
                                            <Setter
                                                Property="CornerRadius"
                                                Value="5"/>
                                        </Style>
                                    </Style.Resources>
                                </Style>
                            </avalonedit:TextEditor.Style>
                        </avalonedit:TextEditor>
                        <ListView
                            x:Name="ScriptList"
                            Background="#161616"
                            BorderBrush="#181818"
                            BorderThickness="0"
                            Margin="40,5,5,5"
                            HorizontalAlignment="Right"
                            Width="120"
                            Height="Auto">
                            <ListView.Style>
                                <Style>
                                    <Style.Resources>
                                        <Style 
                                            TargetType="{x:Type Border}">
                                            <Setter 
                                                Property="CornerRadius"
                                                Value="5"/>
                                        </Style>
                                    </Style.Resources>
                                </Style>
                            </ListView.Style>
                        </ListView>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
